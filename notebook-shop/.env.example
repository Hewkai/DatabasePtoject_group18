APP_NAME="Notebook Shop"
APP_ENV=local
APP_KEY=base64:4eD7E2qe+/mlEGNyNIDP3U+QC/oWwTk/4sgYALHlqsk=
APP_DEBUG=true
APP_URL=http://localhost

WWWGROUP=1000
WWWUSER=1000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# ----- Logging -----
LOG_CHANNEL=stack
LOG_LEVEL=debug

# ----- Database (Laravel Sail) -----
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=sail
DB_USERNAME=sail
DB_PASSWORD=password

# ใช้โดย docker-compose ตอนสร้าง mysql container (ไม่ถูกใช้โดย Laravel ตรงๆ)
MYSQL_DATABASE=sail
MYSQL_USER=sail
MYSQL_PASSWORD=password
MYSQL_ROOT_PASSWORD=password

COMPOSE_PROJECT_NAME=notebook_shop

# ----- Session / Cookie (dev บน localhost) -----
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=
SESSION_SECURE_COOKIE=false

# ----- Cache / Queue (dev) -----
# ใช้ Redis เพื่อรองรับ cache tags
CACHE_STORE=redis
QUEUE_CONNECTION=sync

# ----- Redis (Sail) -----
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ----- Filesystem -----
# ใช้ public disk เพื่อเสิร์ฟไฟล์ผ่าน /storage
FILESYSTEM_DISK=public

# ----- Mail (log) -----
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ----- AWS (ไม่ใช้ก็ปล่อยว่าง) -----
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ----- Vite -----
VITE_APP_NAME="${APP_NAME}"

# ----- Swagger (ถ้ามี l5-swagger) -----
L5_SWAGGER_GENERATE_ALWAYS=true
L5_SWAGGER_UI_DOC_EXPANSION=list

# ----- Sanctum (สำหรับ SPA / แอดมินกรณีใช้ cookie) -----
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1

# --- Default admin for seeding (dev only) ---
ADMIN_NAME="Admin"
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=password